---
import "../styles/global.css";

import Navbar from "../components/Navbar.astro";
import Hero from "../components/Hero.astro";
import BedManagement from "../components/BedManagement.astro";
import Products from "../components/Products.astro";
import History from "../components/History.astro";
import About from "../components/About.astro";
import Contact from "../components/Contact.astro";
import Footer from "../components/Footer.astro";
---

<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/Logo_strategica.jpg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />

		<!-- Meta Tags for SEO -->
		<title>Strategica | Innovación y Gestión en Salud Digital</title>
		<meta
			name="description"
			content="Strategica impulsa la eficiencia hospitalaria con Overmind-Flow, software inteligente para la gestión de pacientes y optimización de recursos clínicos en Chile."
		/>
		<meta
			name="keywords"
			content="Strategica, Overmind-Flow, Aníbal Licán, Gestión de Camas Hospitalarias, Innovación Salud Chile"
		/>
		<link rel="canonical" href="https://strategica.cl/" />

		<!-- OpenGraph -->
		<meta
			property="og:title"
			content="Strategica | Innovación y Gestión en Salud Digital"
		/>
		<meta
			property="og:description"
			content="Strategica impulsa la eficiencia hospitalaria con Overmind-Flow, software inteligente para la gestión de pacientes y optimización de recursos clínicos en Chile."
		/>
		<meta property="og:image" content="/Logo_strategica.jpg" />
		<meta property="og:type" content="website" />

		<!-- Twitter Card -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta
			name="twitter:title"
			content="Strategica | Innovación y Gestión en Salud Digital"
		/>
		<meta
			name="twitter:description"
			content="Strategica impulsa la eficiencia hospitalaria con Overmind-Flow, software inteligente para la gestión de pacientes y optimización de recursos clínicos en Chile."
		/>
		<meta name="twitter:image" content="/Logo_strategica.jpg" />

		<!-- Fonts -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700;800&display=swap"
			rel="stylesheet"
		/>
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@graph": [
					{
						"@type": "Organization",
						"name": "Strategica",
						"url": "https://strategica.cl",
						"logo": "https://strategica.cl/Logo_strategica.jpg",
						"description": "Innovación y Gestión en Salud Digital",
						"founder": {
							"@type": "Person",
							"name": "Aníbal Licán"
						},
						"sameAs": [
							"https://www.linkedin.com/in/aníbal-licán-oyarzo",
							"https://x.com/Anibal_Lican",
							"https://www.youtube.com/@Aníbal_Licán"
						]
					},
					{
						"@type": "SoftwareApplication",
						"name": "Overmind-Flow",
						"applicationCategory": "HealthApplication",
						"operatingSystem": "Web",
						"offers": {
							"@type": "Offer",
							"price": "0",
							"priceCurrency": "CLP"
						},
						"description": "Software inteligente para la gestión de pacientes y optimización de recursos clínicos."
					}
				]
			}
		</script>
	</head>
	<body class="bg-[#f5f5f7] text-[#1c4059] overflow-x-hidden antialiased">
		<header>
			<Navbar />
		</header>

		<main>
			<Hero />
			<BedManagement />
			<Products />
			<History />
			<About />
			<Contact />
		</main>

		<Footer />
	</body>
</html>
