<style>
    .animate-fade-in-up {
        animation: fadeInUp 0.8s ease-out forwards;
        opacity: 0;
        transform: translateY(20px);
    }
    .delay-100 {
        animation-delay: 0.1s;
    }
    .delay-200 {
        animation-delay: 0.2s;
    }
    .delay-300 {
        animation-delay: 0.3s;
    }

    @keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

<script>
    // Overmind-Network Animation using Canvas
    const canvas = document.getElementById(
        "networkCanvas",
    ) as HTMLCanvasElement;
    const ctx = canvas.getContext("2d");

    let width: number, height: number;
    let nodes: Node[] = [];
    let lines: any[] = [];
    const color = "#1c4059";
    const nodeCount = 50; // Density of nodes
    const connectionDistance = 150;

    // Resizing
    function resize() {
        width = canvas.width = window.innerWidth;
        height = canvas.height = window.innerHeight;
    }

    window.addEventListener("resize", resize);
    resize();

    class Node {
        x: number;
        y: number;
        vx: number;
        vy: number;

        constructor() {
            this.x = Math.random() * width;
            this.y = Math.random() * height;
            this.vx = (Math.random() - 0.5) * 0.5; // Slow movement
            this.vy = (Math.random() - 0.5) * 0.5;
        }

        update() {
            this.x += this.vx;
            this.y += this.vy;

            // Bounce off text area (simple avoidance) or edges
            if (this.x < 0 || this.x > width) this.vx *= -1;
            if (this.y < 0 || this.y > height) this.vy *= -1;
        }

        draw() {
            if (!ctx) return;
            ctx.beginPath();
            ctx.arc(this.x, this.y, 2, 0, Math.PI * 2);
            ctx.fillStyle = color;
            ctx.fill();
        }
    }

    // Effect: Pulses traveling along lines
    class Pulse {
        startNode: Node;
        endNode: Node;
        progress: number;
        speed: number;

        constructor(start: Node, end: Node) {
            this.startNode = start;
            this.endNode = end;
            this.progress = 0;
            this.speed = 0.02 + Math.random() * 0.03; // Random speed
        }

        update() {
            this.progress += this.speed;
            if (this.progress > 1) {
                return false; // Remove me
            }
            return true;
        }

        draw() {
            if (!ctx) return;
            const x =
                this.startNode.x +
                (this.endNode.x - this.startNode.x) * this.progress;
            const y =
                this.startNode.y +
                (this.endNode.y - this.startNode.y) * this.progress;

            ctx.beginPath();
            ctx.arc(x, y, 3, 0, Math.PI * 2);
            ctx.fillStyle = "#3b82f6"; // Bright blue pulse
            ctx.shadowBlur = 10;
            ctx.shadowColor = "#3b82f6";
            ctx.fill();
            ctx.shadowBlur = 0;
        }
    }

    // Init Nodes
    for (let i = 0; i < nodeCount; i++) {
        nodes.push(new Node());
    }

    let pulses: Pulse[] = [];

    function animate() {
        if (!ctx) return;
        ctx.clearRect(0, 0, width, height);

        // Update and Draw Nodes
        nodes.forEach((node) => {
            node.update();
            node.draw();
        });

        // Draw Lines
        for (let i = 0; i < nodes.length; i++) {
            for (let j = i + 1; j < nodes.length; j++) {
                const dx = nodes[i].x - nodes[j].x;
                const dy = nodes[i].y - nodes[j].y;
                const dist = Math.sqrt(dx * dx + dy * dy);

                if (dist < connectionDistance) {
                    ctx.beginPath();
                    ctx.moveTo(nodes[i].x, nodes[i].y);
                    ctx.lineTo(nodes[j].x, nodes[j].y);
                    ctx.strokeStyle = `rgba(28, 64, 89, ${1 - dist / connectionDistance})`; // Fade based on distance
                    ctx.lineWidth = 0.5;
                    ctx.stroke();

                    // Chance to spawn a pulse
                    if (Math.random() < 0.005) {
                        pulses.push(new Pulse(nodes[i], nodes[j]));
                    }
                }
            }
        }

        // Update and Draw Pulses
        pulses = pulses.filter((p) => p.update());
        pulses.forEach((p) => p.draw());

        requestAnimationFrame(animate);
    }

    animate();
</script>
